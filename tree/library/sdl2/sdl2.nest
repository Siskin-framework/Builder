github: libsdl-org/SDL /release-2.32.10

eggs: [
	"Make sdl (cmake)" [
		name: %build-sdl
		cmd [
			"cmake -B $SISKIN_TEMP/sdl2 -S sdl -DCMAKE_BUILD_TYPE=Release"
			"-DCMAKE_VERBOSE_MAKEFILE:BOOL=$SISKIN_OPTION_DEBUG"
		]
		cmd "cmake --build   $SISKIN_TEMP/sdl2 --config release -j 8"
		cmd "cmake --install $SISKIN_TEMP/sdl2 --prefix $SISKIN_INSTALL"
	]
]